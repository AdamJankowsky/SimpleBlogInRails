<%= form_for( :article, url: articles_path, class: "form-horizontal" ) do |f| %>
    <fieldset>
        <legend>Add article</legend>
        <div class="form-group">
            <%= f.label :id, class: "col-lg-2 control-label" %>
                <div class="col-lg-10">
                    <%= f.text_field :id, class: "form-control", readonly: 'true' %>
                </div>
        </div>
        <div class="form-group">
            <%= f.label :title, class: "col-lg-2 control-label" %>
                <div class="col-lg-10">
                    <%= f.text_field :title, class: "form-control" %>
                </div>
        </div>
        <div class="form-group">

            <%= f.label :text, class: "col-lg-2 control-label" %><br />
                <div class="col-lg-10">
                    <%= f.text_area :text, class: "form-control wysihtml5" %>
                </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <%= f.submit "Save", class: "btn btn-default" %>
            </div>
        </div>
    </fieldset>
    <% end %>