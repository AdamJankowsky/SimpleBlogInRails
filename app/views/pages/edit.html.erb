<%= form_for( :new_page, url: edit_page_path, class: "form-horizontal", method: :patch ) do |f| %>
    <fieldset>
      <legend>Add page</legend>
      <div class="form-group">
        <%= f.label :name, class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :title, class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.text_field :title, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">

        <%= f.label :body, class: "col-lg-2 control-label" %><br />
        <div class="col-lg-10">
          <%= f.text_area :body, class: "form-control wysihtml5" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
          <%= f.submit "Save", class: "btn btn-default" %>
        </div>
      </div>
    </fieldset>
<% end %>